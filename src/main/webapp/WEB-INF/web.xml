
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
<display-name>ToDoTask</display-name>

 <welcome-file-list>
  <welcome-file>login.jsp</welcome-file>
   </welcome-file-list>
  
  <servlet>
    <servlet-name>AccountController</servlet-name>
    <servlet-class>com.dollop.task.controller.AccountController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>AccountController</servlet-name>
    <url-pattern>/AccountController</url-pattern>
</servlet-mapping>
 
 <servlet>
    <servlet-name>AuthenticationController</servlet-name>
    <servlet-class>com.dollop.task.controller.AuthenticationController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>AuthenticationController</servlet-name>
    <url-pattern>/AuthenticationController</url-pattern>
</servlet-mapping>
 
     
<servlet>
    <servlet-name>TaskController</servlet-name>
    <servlet-class>com.dollop.task.controller.TaskController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>TaskController</servlet-name>
    <url-pattern>/TaskController</url-pattern>
</servlet-mapping>


</web-app>

